{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -lc 'cd \"${CLAUDE_PROJECT_DIR:-$PWD}\" && bash .claude/hooks/load-context.sh'"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -lc 'cd \"${CLAUDE_PROJECT_DIR:-$PWD}\" && python3 .claude/hooks/production_context_injector.py'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -lc 'cd \"${CLAUDE_PROJECT_DIR:-$PWD}\" && bash .claude/hooks/work-checkpoint.sh'"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -lc 'cd \"${CLAUDE_PROJECT_DIR:-$PWD}\" && bash .claude/hooks/save-work-state.sh'"
          }
        ]
      }
    ]
  }
}